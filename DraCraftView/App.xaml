<Application x:Class="DraCraftView.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:DraCraft.View"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:EnumToStringConverter x:Key="DefaultEnumToStringConverter"/>
            <local:BoolToVisibilityConverter x:Key="DefaultBoolToVisibilityConverter"/>
            <SolidColorBrush x:Key="MaterialDesignLimeBrush" Color="#90ee02"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
